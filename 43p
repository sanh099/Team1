  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>도별 꽃 이름 학습</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1, p {
      text-align: center;
    }
    .flower-section {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-bottom: 20px;
    }
    .flower-box {
      margin: 10px;
      text-align: center;
    }
    .flower-box img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 5px;
    }
    .flower-box input {
      margin-top: 5px;
      padding: 5px;
      text-align: center;
    }
    .map-container {
      text-align: center;
      margin-top: 30px;
    }
    button {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    #resultMessage {
      text-align: center;
      font-weight: bold;
      margin-top: 20px;
    }
  </style>
